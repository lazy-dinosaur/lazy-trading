{
  "name": "lazy-trading-chrome-extension",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && bun scripts/generate-manifests.ts && vite build",
    "build:en": "tsc -b && cross-env VITE_APP_LANGUAGE=en vite build -c vite.config.en.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "watch": "tsc -b && vite build --watch",
    "package": "cd dist && zip -r ../lazy-trading-chrome-extension-ko-v1.0.0.zip * -x \"*.DS_Store\"",
    "package:en": "cd dist_en && zip -r ../lazy-trading-chrome-extension-en-v1.0.0.zip * -x \"*.DS_Store\""
  },
